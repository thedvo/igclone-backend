{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "http://example.com/example.json",
	"type": "object",
	"properties": {
		"user": {
			"type": "object",
			"required": ["username", "password", "firstName", "lastName", "email"],
			"properties": {
				"username": {
					"type": "string",
					"minLength": 1,
					"maxLength": 15
				},
				"password": {
					"type": "string",
					"minLength": 5
				},
				"firstName": {
					"type": "string",
					"minLength": 1
				},
				"lastName": {
					"type": "string",
					"minLength": 1
				},
				"email": {
					"type": "string",
					"minLength": 6,
					"maxLength": 60,
					"format": "email"
				},
				"isAdmin": {
					"type": "boolean",
					"default": false
				}
			}
		}
	}
}
